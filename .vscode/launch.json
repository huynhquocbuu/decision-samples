{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Quarkus Attatch",
            "request": "attach",
            "hostName": "localhost",
            "port": 5005
        },
        {
            "name": ".NET Core Sample Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-sample-api",
            "program": "${workspaceFolder}/code-repositories/dotnet-services/sample-api/bin/Debug/net6.0/sample-api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/code-repositories/dotnet-services/sample-api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": ".NET Core Ocelot Api Gateway",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-ocelot-api-gateway",
            "program": "${workspaceFolder}/code-repositories/dotnet-services/ocelot-api-gateway/bin/Debug/net6.0/ocelot-api-gateway.dll",
            "args": [],
            "cwd": "${workspaceFolder}/code-repositories/dotnet-services/ocelot-api-gateway",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "logging": {
                "moduleLoad": false
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "type": "java",
            "name": "Spring Boot-SpringApiApplication<spring_api>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "sample.services.spring_api.SpringApiApplication",
            "projectName": "spring_api",
            "args": "",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}